<%# navigation styled for Zurb Foundation 5 %>
<nav class="top-bar" data-topbar>
  <section class="top-bar-section">
    <ul class="title-area ">
      <li class="name">
        <%=link_to( image_tag("logo-home.png"), main_app.root_path) %>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"></a></li>
    </ul>

    <ul class="right">

      <li><%= link_to "Lessons", main_app.lessons_path %></li>
      <% if user_signed_in? %>
        <li class="has-dropdown">
          <a href="#">Profile</a>
          <ul class="dropdown">
            <% if current_user.admin? %>
              <li><%= link_to "Admin", admin.root_path %></li>
            <% end %>
            <li><%= link_to "Edit account", main_app.edit_user_registration_path %></li>
            <li><%= link_to "Logout", main_app.destroy_user_session_path, :method=>"delete" %></li>
          </ul>
      <% else %>
        <li><%= link_to "Sign up", main_app.new_user_registration_path %></li>
      <% end %>

      <% unless user_signed_in? %>
        <li><%= link_to "Login", main_app.new_user_session_path %></li>
      <% end %>

    </ul>
  </section>
</nav>
